{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ] ,
    "types": [
      "node",
      "jest",
      "supertest"
    ] ,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "*.ts",
    "*.d.ts",
    "*.test.ts",
    "server.ts",
    "jest-preload.js",
    "declaration/mongoose-extended-schema.d.ts"
  ],
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}